<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<BaseHref>/</BaseHref>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.3" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.3" PrivateAssets="all" />
	</ItemGroup>

	<!-- âœ… base href ì¹˜í™˜ ì‹œ íŠ¹ìˆ˜ë¬¸ìëŠ” XML ì¸ì½”ë”© ì‚¬ìš© -->
	<Target Name="ReplaceBaseHref" AfterTargets="Publish">
		<Message Text="ğŸ”§ Replacing base href for GitHub Pages..." Importance="high" />
		<ReadLinesFromFile File="$(PublishDir)wwwroot/index.html">
			<Output TaskParameter="Lines" ItemName="IndexHtmlLines" />
		</ReadLinesFromFile>

		<WriteLinesToFile
		  File="$(PublishDir)wwwroot/index.html"
		  Lines="@(IndexHtmlLines->Replace('&lt;base href=&quot;/&quot; /&gt;', '&lt;base href=&quot;/GameSite/&quot; /&gt;'))"
