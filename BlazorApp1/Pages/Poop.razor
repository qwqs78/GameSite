@page "/poop"
@inject IJSRuntime JS

<h1>💩 똥 피하기 게임</h1>

@if (!isGameStarted)
{
    <button @onclick="StartGame" class="start-button">게임 시작</button>
}
<canvas id="poopCanvas" width="400" height="600" style="border:1px solid #000; display:@(isGameStarted ? "block" : "none");"></canvas>

<div id="gameOverButtons" style="display: none; margin-top: 10px;">
    <button onclick="restartPoopDodgeGame()">다시 시작</button>
    <button onclick="endPoopDodgeGame()">게임 종료</button>
</div>

@code {
    private bool isGameStarted = false;

    private async Task StartGame()
    {
        isGameStarted = true;
        await JS.InvokeVoidAsync("startPoopDodgeGame");
    }
}
