@page "/snake"
@inject IJSRuntime JS
@using Microsoft.JSInterop;

<h1>🐍 Snake Game</h1>
@if (!isGameStarted)
{
    <button @onclick="startSnakeGame" style="font-size: 20px; margin-bottom: 20px;">▶ 게임 시작</button>
}
<canvas id="snakeCanvas" width="500" height="500" style="border:1px solid #000;"></canvas>

@code {
    private bool isGameStarted = false;

    private async Task startSnakeGame()
    {
        isGameStarted = true;
        await JS.InvokeVoidAsync("startSnakeGame");
    }
}
