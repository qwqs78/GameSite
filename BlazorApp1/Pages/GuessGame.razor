@page "/GuessGame"
@inject NavigationManager Navigation

<h3>🎮 숫자 맞추기 게임</h3>

<button @onclick="CloseGame" style="float: right; font-size: 20px;">❌</button> <!-- X 버튼 -->

<p>1~100 사이의 숫자를 입력하세요:</p>
<input @bind="userGuess" type="number" />
<button @onclick="CheckGuess">확인</button>

<p>@message</p>

@code {
    static Random random = new Random();
    int secretNumber = random.Next(1, 101);
    int userGuess;
    string message = "";

    void CheckGuess()
    {
        if (userGuess < secretNumber)
            message = "🔼 더 큰 숫자를 입력하세요!";
        else if (userGuess > secretNumber)
            message = "🔽 더 작은 숫자를 입력하세요!";
        else
            message = "🎉 정답입니다!";
    }

    void CloseGame()
    {
        Navigation.NavigateTo("/"); // 메인 페이지로 이동
    }
}
